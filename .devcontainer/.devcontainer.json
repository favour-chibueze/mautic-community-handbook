{
    "name": "Mautic Community Handbook",
    "image": "mcr.microsoft.com/devcontainers/python:3.11",
    "postCreateCommand": "pip install -r docs/requirements.txt",
    "forwardPorts": [8000],
    "onCreateCommand": "sphinx-autobuild docs/ build/ --host 0.0.0.0 --port 8000",
    "customizations": {
      "vscode": {
        "extensions": [
          "ms-python.python",
          "lextudio.restructuredtext",
          "trond-snekvik.simple-rst",
          "errata-ai.vale-server",
          "eamodio.gitlens"
        ]
      }
    }
  }
  